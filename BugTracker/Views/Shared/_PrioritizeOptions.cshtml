<div class="modal fade" id="prioritizeModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="prioritizeModalLabel">Prioritize </h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p class="issue-description"></p>
                <form>
                    <div class="form-check ">
                        <input class="form-check-input" issueId=0 type="radio" name="priorities" id="critical"
                            value="1">
                        <label class="form-check-label" for="critical">Critical</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" issueId=0 type="radio" name="priorities" id="high" value="2">
                        <label class="form-check-label" for="high">High</label>
                    </div>

                    <div class="form-check">

                        <input class="form-check-input" issueId=0 type="radio" name="priorities" id="mediumHigh"
                            value="3">
                        <label class="form-check-label" for="mediumHigh">Medium-high</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" issueId=0 type="radio" name="priorities" id="mediumLow"
                            value="4">
                        <label class="form-check-label" for="mediumLow">Medium-low</label>

                    </div>
                    <div class="form-check">
                        <input class="form-check-input" issueId=0 type="radio" name="priorities" id="low" value="5">
                        <label class="form-check-label" for="low">Low</label>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Description:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger js-prioritize">Send message</button>
            </div>
        </div>
    </div>
</div>